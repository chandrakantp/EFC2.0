<div class="modal fade" id="addEditArticleModal">
    <div class="modal-dialog efcModal efcMaxModal">
        <div class="modal-content">
            <div class="rd-dialog-heading p-0">
                Add Article
            </div>
            <div class="row">
                <div class="col-md-6 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">
                        Grievance Category *
                    </label>
                    <select class="form-select">
                        <option>Select Grievance Category</option>
                    </select>
                </div>
                <div class="col-md-6 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">
                        Grievance To Raise *
                    </label>
                    <select class="form-select">
                        <option>Select Grievance To Raise</option>
                    </select>
                </div>
                <div class="col-md-12 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">Article Content*</label>
                    <textarea type="text" class="form-control" id="articleContentEditor"></textarea>
                </div>
                <div class="col-md-12 tabcol mb-1">
                    <label class="rd-form-select-label mb-1"> Upload PNG,JPEG,PDF,DOCX,XLSX etc..</label>
                    <input type="file" class="form-control" >
                </div>
            </div>
            <div class="modal-footer mt-2">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
<script>
    ClassicEditor
