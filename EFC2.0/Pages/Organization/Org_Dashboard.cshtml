@page
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<link href="~/css/tabs.css" rel="stylesheet" media="all" onload="this.media='all'" />
<link href="~/css/organization.css" rel="stylesheet" media="all" onload="this.media='all'" />
<div class="app-container" dir="ltr">
    <div class="container-fluid px-0 main-content-page h-100">
        <partial name="Org_tabs" />
        <div class="aos-init aos-animate">
            <div class="child-content nav-active-top" id="summary">
                <ul class="topnav-child-1">
                    <li data-target="org-summary" class="nav-active-top">Summary</li>
                    <li data-target="org-reports">Reports</li>
                </ul>
            </div>
            <div class="container-fluid p-3">
                <div id="org-summary" class="grand-child nav-active-top">
                    <partial name="../Organization/Org_Summary">
                </div>
                <div id="org-reports" class="grand-child">
                    <partial name="../Organization/Org_Reports" />
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://unpkg.com/apexcharts@3.22.1/dist/apexcharts.min.js"></script>
