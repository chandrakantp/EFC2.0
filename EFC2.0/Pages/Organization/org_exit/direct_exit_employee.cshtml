<div class="modal fade" id="addExitEmployeeModal">
    <div class="modal-dialog efcModal efcMaxModal">
        <div class="modal-content">
            <div class="rd-dialog-heading p-0">Add Exit Employee</div>
            <div class="row align-items-end">
                <div class="col-md-4 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">Legal Entity *</label>
                    <select class="form-select">
                        <option selected>Select Legal Entity</option>
                        <option value="1">Admin Department</option>
                        <option value="2">HR Department</option>
                    </select>
                </div>
                <div class="col-md-4 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">Department</label>
                    <select class="form-select">
                        <option selected>Select Department</option>
                        <option value="1">Admin Department</option>
                        <option value="2">HR Department</option>
                    </select>
                </div>
                <div class="col-md-4 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">Designation</label>
                    <select class="form-select">
                        <option selected>Select Designation</option>
                        <option value="1">Admin Department</option>
                        <option value="2">HR Department</option>
                    </select>
                </div>
                <div class="col-md-4 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">Employees *</label>
                    <select class="form-select">
                        <option selected>Select Employees</option>
                        <option value="1">Admin Department</option>
                        <option value="2">HR Department</option>
                    </select>
                </div>
                <div class="col-md-4 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">Exit Reason *</label>
                    <select class="form-select">
                        <option selected>Select Exit Reason</option>
                        <option value="1">Admin Department</option>
                        <option value="2">HR Department</option>
                    </select>
                </div>
                <div class="col-md-4 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">Decided Notice Period From Date</label>
                    <input type="date" class="form-control" placeholder="Decided Notice Period From Date" />
                </div>
                <div class="col-md-4 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">Decided Notice Period To Date</label>
                    <input type="date" class="form-control" placeholder="Decided Notice Period To Date" />
                </div>
                <div class="col-md-6 my-2">
                    <div>
                        <label class="rd-form-select-label mb-2 me-2 text-muted"><input type="checkbox" id="1" class="form-check-input" name="checkBoxName">  <span> Allow to rehire employee   </span></label>
                    </div>
                </div>
                <div class="col-md-12 tabcol mb-1">
                    <label class="rd-form-select-label mb-1">Additional Comments *</label>
                    <textarea type="text" class="form-control" id="additionalComments" placeholder="Additional Comments "></textarea>
                </div>
            </div>
            <div class="modal-footer mt-2">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>
