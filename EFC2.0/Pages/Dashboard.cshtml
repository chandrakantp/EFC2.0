                        <div class="col-md-6">
                            <div class="events-wrap heightWrap">
                                <div class="d-flex justify-content-between rd-mb-1">
                                    <div class="rd-home-headings1">Events</div>
                                    <div class="apply-button">View All</div>
                                </div>
